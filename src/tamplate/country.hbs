
{{#each this}}
<div class="country">
 <div class='description'>
   <h2 class='contry_name'>{{name}}</h2>
   <ul class='description_list'>
     <li class='description_item'>Capital : {{capital}}</li>
     <li class='description_item'>Population : {{population}}</li>
     <li class='description_item'>
       languages :
       <ul class='languages_list'>
         {{#each languages}}
           <li class="languages_item">{{name}}</li>
         {{/each}}
       </ul>
     </li>
   </ul>
 </div>
  <div class='flag'>
    <img src='{{flags.svg}}' alt='{{name}}' class='country-flag'>
  </div>
</div>
{{/each}}